{% macro lines(lines, class) %}
    {% for line in lines %}
        <line class="{{ class }}" x1="{{ line.from.x }}" y1="{{ line.from.y }}" x2="{{ line.to.x }}" y2="{{ line.to.y }}"/>
    {% endfor %}
{% endmacro %}

{% macro line(from, to, class) %}
    <line class="{{ class }}" x1="{{ from.x }}" y1="{{ from.y }}" x2="{{ to.x }}" y2="{{ to.y }}"/>
{% endmacro %}