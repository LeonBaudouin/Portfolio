{% macro lines(lines, class, width) %}
    {% for line in lines %}
        <line class="{{ class }}" x1="{{ line.from.x }}" y1="{{ line.from.y }}" x2="{{ line.to.x }}" y2="{{ line.to.y }}" {{ width is not empty ? 'stroke-width=' ~ width }} />
    {% endfor %}
{% endmacro %}

{% macro line(from, to, class, width) %}
    <line class="{{ class }}" x1="{{ line.from.x }}" y1="{{ line.from.y }}" x2="{{ line.to.x }}" y2="{{ line.to.y }}" {{ width is not empty ? 'stroke-width=' ~ width }} />
{% endmacro %}