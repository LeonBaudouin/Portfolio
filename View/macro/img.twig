{% macro pictureTag(highRes, lowRes, alt, class, offset) %}
    <picture class="{{ class }}">
        <source class="js-lazy-loading" srcset="{{ getImagePath('placeholder.png') }}" media="(min-width: 800px)" data-srcset="{{ getImagePath(highRes) }}" data-offset="{{offset}}">
        <img class="js-lazy-loading" src="{{ getImagePath('placeholder.png') }}" alt="{{ alt }}" data-src="{{ getImagePath(lowRes) }}" data-offset="{{offset}}">
    </picture>
{% endmacro %}
