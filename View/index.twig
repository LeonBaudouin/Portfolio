{% extends "layout.twig" %}

{% block pageName %}main-page{% endblock %}
{% block bodyClass %}scroll-index-0{% endblock %}

{% block sideButton %}
    <div class="scroll-bar sideButton">
        <div class="scroll-bar-section to-title js-hovered-element"></div>
        <div class="scroll-bar-section to-profil js-hovered-element"></div>
        <div class="scroll-bar-section to-projet js-hovered-element"></div>
        <div class="scroll-bar-section to-lab js-hovered-element"></div>
        <div class="scroll-bar-current"></div>
    </div>

    <svg class="scroll-icon sideButton js-hovered-element" viewbox="-1 0 15 52" width="16" height="52">
        <line class="scroll-icon-line" x1="1" y1="8" x2="1" y2="46" stroke-width="2" />
        <line class="scroll-icon-line" x1="7" y1="17" x2="7" y2="55" stroke-width="2" />
        <line class="scroll-icon-line" x1="13" y1="0" x2="13" y2="38" stroke-width="2" />
    </svg>
{% endblock %}

{% block content %}
    {% include 'home/greeting.twig' only %}
    {% include 'home/profile.twig' only %}
    {% include 'home/projects.twig' only %}
    {% include 'home/lab.twig' only %}
{% endblock %}