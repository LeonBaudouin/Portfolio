{% import "macro/img.twig" as img %}
{% import "macro/div.twig" as div %}
{% set projects = [
    {name: "Particules", highResFeaturedImage: "Particles_1920.png", lowResFeaturedImage: "Particles_800.png", url: "./particles/", description: "Cette page compile trois expérimentations avec les canvas et les objets Javascript. L’un de ses travaux utilise des fonctions physiques pour reproduire la gravité."},
    {name: "Mikros Motion", highResFeaturedImage: "Mikros_1920.png", lowResFeaturedImage: "Mikros_800.png", url: "https://www.youtube.com/watch?v=-lfYiAm-qjc", description: "Animation réalisée à l’occasion de mon stage au sein de Mikros Image. Je me suis entraîné à créer des mouvements réalistes."},
    {name: "Cane Shuga", highResFeaturedImage: "CaneShuga_1920.png", lowResFeaturedImage: "CaneShuga_800.png", url: "https://www.youtube.com/watch?v=1C1Urfbjxo4", description: "Pour cette réalisation, j’ai expérimenté avec le plugin Ae Sound Keys afin de créer une animation entièrement synchronisée avec la musique."}
] %}
<div class="page lab">
    <section class="section">
        <div class="section-background">
            {% for project in projects %}
                {{ img.pictureTag(project.highResFeaturedImage, project.lowResFeaturedImage, 'Illustration du projet' ~ project.name, "photo-lab") }}
            {% endfor %}
            <div class="background-squares v-s-page">
                <div class="background-squares-group">
                    {{ div.multiples("background-squares-group-element", 8) }}
                </div>
                <div class="background-squares-group">
                    {{ div.multiples("background-squares-group-element", 15) }}
                </div>
                <div class="background-squares-group">
                    {{ div.multiples("background-squares-group-element", 5) }}
                </div>
            </div>
            <div class="background-squares v-m-page">
                <div class="background-squares-group">
                    {{ div.multiples("background-squares-group-element", 9) }}
                </div>
                <div class="background-squares-group">
                    {{ div.multiples("background-squares-group-element", 17) }}
                </div>
                <div class="background-squares-group">
                </div>
            </div>
        </div>
        <div class="section-content">
            <h2 class="title regular-title">
                <a href="{{ getUrl('lab_list') }}" class="first-part"><span class="first-part-content">Mon</span></a>
                <a href="{{ getUrl('lab_list') }}" class="second-part"><span class="second-part-content">Lab</span></a>
            </h2>
            {% for project in projects %}
                <div class="description fade-from-left">
                    <h3 class="lab-title title"><span class="lab-title-content">{{ project.name }}</span></h3>
                    <p class="paragraph">{{ project.description }}</p>
                    <a href="{{ project.url }}" target="_blank" class="see-more">Voir le projet</a>
                </div>
            {% endfor %}
            <a href="{{ getUrl('lab_list') }}" class="button all fade-from-left">
                {% include "svg/tout-voir.twig" only %}
                {% include "svg/double-arrow.twig" only %}
            </a>
            {% include "home/next-project-button.twig" with {projects: projects} only %}
        </div>
    </section>
    {% include "home/contact.twig" only %}
</div>